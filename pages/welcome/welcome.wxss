
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.user-avatar{
  width: 200rpx;
  height:200rpx;
  border-radius: 50%;
  margin-top: 160rpx;
  overflow: hidden;
}

.user-avatar image{
  width:100%;
  height: 100%;
}

.user-name{
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 100rpx;
}

.moto-container{
  border:1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 5px;
  margin-top: 150rpx;
}

.moto{
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color:#405f80;
}

page{
  height: 100%;
  background: #b3d4db;
}

